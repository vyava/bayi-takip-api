{
  "compilerOptions": {
    "outDir": "./built",
    "allowJs": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "target": "es6",
    "module": "commonjs",
    "baseUrl": "src"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "paths": {
    "api/*": ["api/*"],
    "config/*": ["config/*"],
    "@model/*" : ["api/models/*"]
  }
}
